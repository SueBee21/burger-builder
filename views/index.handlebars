<h1>Welcome to Burger Builder!</h1>
<br>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            {{!-- add a burger --}}
            <h2>Create Your New Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="new">Burger Name:</label>
                    <input type="text" id="new" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>

        </div>
        <div class="col-sm-4">
            <h2>Order Up!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}} <button class="devour-burger">Eat da Burger!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>


        </div>
        <div class="col-sm-4">
            <h2>Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>


        </div>
    </div>
</div>